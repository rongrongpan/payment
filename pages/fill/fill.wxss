/* pages/fill/fill.wxss */
.container{
  width: 100%;
  box-sizing: border-box;
  padding: 0 36rpx;
}
.total{
  width: 100%;
  height: 66rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  line-height: 66rpx;
}
.total .month{
  font-weight: bold;
}
.total .month .iconfont{
  font-weight: normal;
  font-size: 32rpx;
  color: #C0C4CC;
}
.total .money{
  color: #303133;
  font-size: 40rpx;
}
.total .money .desc{
  color: #606266;
  font-size: 28rpx;
}
.total .money .big{
  font-size: 48rpx;
}
.bottom{
  width: 100%;
  height: calc(100% - 90rpx);
  overflow: auto;
  margin-top: 24rpx;
}
.list{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 36rpx;
  border-radius: 24rpx;
  margin-bottom: 24rpx;
}
.list .title{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 1px solid #F0F2F5;
  display: flex;
  justify-content: space-between;
  color: #303133;
  font-size: 28rpx;
}
.list .title .right{
  font-size: 24rpx;
}
.list .title .right text{
  font-size: 32rpx;
}
.li .price{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 44rpx;
  font-size: 32rpx;
  color: #303133;
}
.li .price .pri{
  color: #4666B0;
}
.li .idcard{
  color: #606266;
  font-size: 24rpx;
  line-height: 34rpx;
  margin: 12rpx 0;
}
.li .idcard .iconfont{
  font-size: 32rpx;
  color: #52CCC1;
  margin-right: 12rpx;
}
.li .date{
  font-size: 24rpx;
  color: #909399;
  line-height: 34rpx;
}
.li{
  padding: 24rpx 0;
  border-bottom: 1px solid #F0F2F5;
}
.li:last-child{
  border-bottom: 0;
}