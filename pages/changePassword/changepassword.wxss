/* pages/changePassword/changepassword.wxss */
.container{
  width: 100%;
  box-sizing: border-box;
  padding: 60rpx 40rpx 0;
}
.weui-input{
  width: 100%;
  height: 80rpx;
  border-radius: 24rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  text-align: left;
  box-sizing: border-box;
  padding:0 30rpx;
}
.weui-input .input{
  height: 100%;
  font-size: 30rpx;
  color: #333;
}
.code{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.code .input{
  flex-grow: 1;
}
.getcode{
  font-size: 28rpx;
  color: #4666B0;
  height: 100%;
  line-height: 80rpx;
  width: 180rpx;
  text-align: center;
  flex-shrink: 0;
}
.button[type='default']{
  background-color: #4666B0;
  color: #fff;
  margin-top: 60rpx;
}
.getcode .gray{
  color: #909399;
}
.passwordlength{
  font-size: 24rpx;
  color: #C0C4CC;
  margin-top: 24rpx;
  padding-left: 30rpx;
}