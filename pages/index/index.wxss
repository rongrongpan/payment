/**index.wxss**/
.getcode{
  width: 248rpx;
  height: 248rpx;
  border-radius: 124rpx;
  background-color: #4666B0;
  box-shadow: 0 24rpx 68rpx 0 #41578A;
  display: flex;
  justify-content: center;
  align-items: center;
  position: fixed;
  left: 50%;
  transform: translateX(-50%);
  bottom: 120rpx;
  position: fixed;
  transition: opacity .3s ease-out;
}
.getcode:hover{
  opacity: .8;
}
.getcode .status{
  text-align: center;
}
.getcode.none{
  opacity: .9;
}
.getcode .iconfont{
  width: 64rpx;
  color: #fff;
  font-size: 60rpx;
}
.getcode .font{
  font-size: 30rpx;
  color: #fff;
  margin-top: 24rpx;
}
.iconmodify{
  color: #DCDFE6;
}
@keyframes mymove
{
  from {transform: rotate(0deg);}
  to {transform: rotate(360deg);}
}

@-webkit-keyframes mymove /*Safari and Chrome*/
{
  from {transform: rotate(0deg);}
  to {transform: rotate(360deg);}
}
.getcode .load{
  width: 60rpx;
  animation:mymove 1.5s linear infinite;
  -webkit-animation:mymove 1.5s linear infinite; /*Safari and Chrome*/
}
.container{
  width: 100%;
  box-sizing: border-box;
  padding: 40rpx 36rpx 0;
}
.storeName{
  width: 100%;
  background-color: #fff;
  box-sizing: border-box;
  padding: 36rpx;
  border-radius: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 32rpx;
  color: #303133;
}
.storeName .logo{
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  flex-shrink: 0;
}
.storeName .set{
  width: 34rpx;
  height: 34rpx;
  color: #DCDFE6;
}
.storeName .tit{
  margin: 0 24rpx;
  flex-grow: 1;
}
.paylist{
  width: 100%;
  background-color: #fff;
  border-radius: 24rpx;
  padding: 36rpx;
  line-height: 48rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 24rpx;
  box-sizing: border-box;
}
.paylist .left{
  font-size: 32rpx;
  color: #606266;
}
.paylist .left text{
  color: #909399;
  font-size: 28rpx;
}